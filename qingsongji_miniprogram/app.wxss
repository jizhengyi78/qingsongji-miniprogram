/* app.wxss */

/* 全局样式 */
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-primary:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background: #f8f9fa;
  color: #495057;
  border: 2rpx solid #dee2e6;
}

.btn-danger {
  background: #e74c3c;
  color: #fff;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 32rpx;
  background: #fff;
  transition: border-color 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  outline: none;
}

/* 金额输入框 */
.amount-input {
  font-size: 72rpx;
  font-weight: 700;
  text-align: center;
  color: #2c3e50;
  padding: 40rpx;
  border: none;
  background: transparent;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #667eea;
  color: #fff;
  transform: scale(1.05);
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  text-align: center;
}

/* 账单列表项 */
.bill-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bill-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.bill-info {
  flex: 1;
}

.bill-category {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.bill-date {
  font-size: 24rpx;
  color: #95a5a6;
}

.bill-amount {
  font-size: 36rpx;
  font-weight: 700;
}

.bill-amount.income {
  color: #27ae60;
}

.bill-amount.expense {
  color: #e74c3c;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.stats-title {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 700;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #95a5a6;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #95a5a6;
}

.loading-text {
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #e9ecef;
  margin: 30rpx 0;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

.mt-10 {
  margin-top: 20rpx;
}

.mt-20 {
  margin-top: 40rpx;
}

.mb-10 {
  margin-bottom: 20rpx;
}

.mb-20 {
  margin-bottom: 40rpx;
}

.p-10 {
  padding: 20rpx;
}

.p-20 {
  padding: 40rpx;
}

/* 颜色类 */
.text-primary {
  color: #667eea;
}

.text-success {
  color: #27ae60;
}

.text-danger {
  color: #e74c3c;
}

.text-warning {
  color: #f39c12;
}

.text-muted {
  color: #95a5a6;
}

.bg-white {
  background: #fff;
}

.bg-gray {
  background: #f8f9fa;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease;
}

/* 滑动操作 */
.swipe-cell {
  position: relative;
  overflow: hidden;
}

.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
}

.swipe-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
}

.swipe-action.delete {
  background: #e74c3c;
}

.swipe-action.edit {
  background: #3498db;
}
