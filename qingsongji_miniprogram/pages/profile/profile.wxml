<!-- 个人中心页面 -->
<view class="container">
  <!-- 用户信息 -->
  <view class="user-card">
    <view class="user-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="user-info">
      <open-data type="userNickName" class="user-name"></open-data>
      <text class="user-desc">轻松记账，智慧理财</text>
    </view>
  </view>

  <!-- 数据概览 -->
  <view class="card mb-20" wx:if="{{stats}}">
    <view class="stats-grid">
      <view class="stats-item">
        <text class="stats-number">{{stats.totalBills}}</text>
        <text class="stats-label">总账单</text>
      </view>
      <view class="stats-item">
        <text class="stats-number">{{stats.totalDays}}</text>
        <text class="stats-label">记账天数</text>
      </view>
      <view class="stats-item">
        <text class="stats-number">{{stats.thisMonthBills}}</text>
        <text class="stats-label">本月账单</text>
      </view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="exportData">
      <view class="menu-icon">
        <i class="fas fa-file-export"></i>
      </view>
      <view class="menu-content">
        <text class="menu-title">数据导出</text>
        <text class="menu-desc">导出账单数据为CSV格式</text>
      </view>
      <i class="fas fa-chevron-right menu-arrow"></i>
    </view>

    <view class="menu-item" bindtap="backupData">
      <view class="menu-icon">
        <i class="fas fa-cloud-upload-alt"></i>
      </view>
      <view class="menu-content">
        <text class="menu-title">云端备份</text>
        <text class="menu-desc">备份数据到云端</text>
      </view>
      <i class="fas fa-chevron-right menu-arrow"></i>
    </view>

    <view class="menu-item" bindtap="restoreData">
      <view class="menu-icon">
        <i class="fas fa-cloud-download-alt"></i>
      </view>
      <view class="menu-content">
        <text class="menu-title">恢复数据</text>
        <text class="menu-desc">从云端恢复数据</text>
      </view>
      <i class="fas fa-chevron-right menu-arrow"></i>
    </view>

    <view class="divider"></view>

    <view class="menu-item" bindtap="showAbout">
      <view class="menu-icon">
        <i class="fas fa-info-circle"></i>
      </view>
      <view class="menu-content">
        <text class="menu-title">关于轻松记</text>
        <text class="menu-desc">版本信息</text>
      </view>
      <i class="fas fa-chevron-right menu-arrow"></i>
    </view>
  </view>
</view>
